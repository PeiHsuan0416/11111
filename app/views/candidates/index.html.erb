<%= flash[:notice] %>

<h1>候選人名單</h1>

<%= link_to "新增候選人", new_candidate_path %>

<table>
	<tr>
		<td>候選人姓名</td>
		<td>黨派</td>
		<td>年紀</td>
		<td>Action</td>
	</tr>

    <% @candidates.each do |candidate| %>
    <tr>
        <td><%= link_to candidate.name, candidate_path(candidate.id) %></td>
        <td><%= candidate.party %></td>
        <td><%= candidate.age %></td>
        <td><%= link_to "修改", edit_candidate_path(candidate.id) %></td>
        <td><%= link_to "刪除", candidate_path(candidate.id), method: "delete", data: {confirm: "是否確認刪除?"} %></td>
    </tr>

    <% end %>
</table>